=========================================================1-fiter================================================
perl /data02/guest/JianyingLi/RNA-seq/software/SolexaQA_v.2.2/DynamicTrim.pl S6_R1.fastq S6_R2.fastq -h 20 -d S6_Trim &
perl LengthSort.pl Sample6_Trim/S6_R1.fastq.trimmed Sample6_Trim/S6_R2.fastq.trimmed -l 30 -d Sample6_clean >errlog &
=========================================================2-mapping================================================bowtie2-build GbV1.fasta GbV1 &
nohup tophat -p 8 -G Gb.final.all.gene.model.v5.gff3 -o Sample1_Gb_mapping GbV1 Sample1/S1_R1.fastq Sample1/S1_R2.fastq &
=========================================================3-cufflinks============================================
cufflinks -p 8 -G /data02/guest/JianyingLi/3.20/Gb.final.all.gene.model.v5.gff3 -b GbV1.fasta -u -o sample1_Gb_expression Sample1_Gb_mapping/accepted_hits.bam &
=========================================================4-readCounts==========================================
bedtools coverage -abam tophat/accepted_hits.bam -b Gb.final.all.gene.model.v5.gff3 > S6.counts 
grep "gene" S3_count | awk '{print $9,$10}' >S3
#awk '{split($1,a,";");print a[1],"\n"}' yourfilename
cut -f9,10 HR0-1.count|sed 's/;/\t/g'|sed 's/"//g'|cut -d ' ' -f2 >ID
paste Gb_id_new S3.counts S4.counts S7.counts S8.counts >Z12.readcounts.txt
=========================================================5-DESeq/cuffdiff=========================================perl /data02/guest/JianyingLi/perl/getSeq_hash.pl -i HZ24.id -f ../../diff1-9_out/Gb.final.all.protein.fa -o HZ24_gene.fa &
blastall -p blastp -i H24_gene.fa -d /home/genome/public_data/nr/nr -e 1e-6 -m 7 -v 20 -b 20 -o H24.xml -a 15 >err>errlog &
========================================================GO VS KEGG============================================
